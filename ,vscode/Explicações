# Objeto
const celular = {
  cor: 'preto',
  ligar: function() {
    const mensagem = "Ligando"
    alert(mensagem)
  }
}
celular.ligar() = caixinha com a mensagem ligando

# DOM - Dcocument Object Model
elementos html se transformal em objeto js
ex: document.body.style.backgrounColor = "White" ou document.querySelector("input").click()

